<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content"
                                                   android:padding="8dp">

    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/timestampTw"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:text="May 11,2019 10:48:52 PM"
            app:layout_constraintEnd_toStartOf="@+id/editBtn"
            android:layout_marginEnd="8dp"/>

    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/titleTw"
            app:layout_constraintTop_toBottomOf="@+id/timestampTw"
            android:layout_marginTop="4dp"
            tools:text="some todo item"
            app:layout_constraintEnd_toEndOf="@+id/timestampTw"
            app:layout_constraintBottom_toBottomOf="parent"/>

    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_delete_black_24dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/delBtn"
            android:contentDescription="@string/delete"/>

    <ImageButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_mode_edit_black_24dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/editBtn"
            app:layout_constraintEnd_toStartOf="@+id/delBtn"
            android:contentDescription="@string/edit"/>
</androidx.constraintlayout.widget.ConstraintLayout>